{
  "name": "Gait Analysis Dashboard",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "streamlit_app.py"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  
  "updateContentCommand": "pip3 install --user -r requirements.txt && pip3 install --user -r backend/requirements.txt && pip3 install --user streamlit",
  
  "postAttachCommand": {
    "backend": "cd backend && python3 -m uvicorn main:app --host 0.0.0.0 --port 8000 &",
    "dashboard": "streamlit run streamlit_app.py --server.enableCORS false --server.enableXsrfProtection false --server.port 8501 --server.address 0.0.0.0"
  },
  
  "forwardPorts": [8000, 8501],
  "portsAttributes": {
    "8000": {
      "label": "Backend API",
      "onAutoForward": "notify",
      "requireLocalPort": false,
      "visibility": "public"
    },
    "8501": {
      "label": "Streamlit Dashboard",
      "onAutoForward": "openPreview",
      "requireLocalPort": false,
      "visibility": "public"
    }
  },
  
  "remoteUser": "vscode"
}